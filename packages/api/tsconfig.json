{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    // without rootDir, dist is dist/src
    // i'm don't want my dist to have a src dir
    "rootDir": "./src/",
    // with rootDir, tsBuildInfoFile is placed next to the tsconfig.json
    // # ts v3.5.3
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "typeRoots": ["@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*"],
  "references": [
    { "path": "../utils" },
    { "path": "../player" },
    { "path": "../sounds" }
  ]
}
